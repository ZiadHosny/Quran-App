{
  "name": "quran",
  "version": "1.1.0",
  "description": "",
  "main": "backend/index.ts",
  "type": "module",
  "scripts": {
    "start": "ts-node --esm backend/dist/index.js",
    "server": "nodemon --esm backend/src/index.ts",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "ts.check": "tsc --project tsconfig.json",
    "add-dist": "cd backend && git add dist",
    "add-build": "cd frontend && git add build",
    "build-backend": "cd backend && rimraf dist && tsc",
    "build-frontend": "cd frontend && npm run build"
  },
  "pre-commit": [
    "ts.check",
    "build-backend",
    "add-dist"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^8.2.0",
    "morgan": "^1.10.0",
    "web-push": "^3.6.4",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.3.1",
    "@types/web-push": "^3.3.2",
    "@types/websocket": "^1.0.10",
    "chalk": "^5.3.0",
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}